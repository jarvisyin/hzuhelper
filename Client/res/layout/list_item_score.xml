<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0e0"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lly_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/shape_list_item_score"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_kcmc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:textSize="17sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_xn"
                    style="@style/list_item_score_tv" />

                <TextView
                    android:id="@+id/tv_xq"
                    style="@style/list_item_score_tv" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_jd"
                    style="@style/list_item_score_tv" />

                <TextView
                    android:id="@+id/tv_xf"
                    style="@style/list_item_score_tv" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_kclx"
                    style="@style/list_item_score_tv" />

                <TextView
                    android:id="@+id/tv_khfs"
                    style="@style/list_item_score_tv" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_cxcj"
                    style="@style/list_item_score_tv" />

                <TextView
                    android:id="@+id/tv_sycj"
                    style="@style/list_item_score_tv" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_qzcj"
                    style="@style/list_item_score_tv" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_pscj"
                    style="@style/list_item_score_tv" />

                <TextView
                    android:id="@+id/tv_qmcj"
                    style="@style/list_item_score_tv" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/list_item_score_tv"
                    android:layout_width="wrap_content"
                    android:text="总评成绩" />

                <TextView
                    android:id="@+id/tv_zpcj"
                    style="@style/list_item_score_tv"
                    android:textSize="20sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>