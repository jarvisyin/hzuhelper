<?xml version="1.0" encoding="UTF-8"?>
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#FFFFFF" />

            <corners
                android:bottomLeftRadius="3.5dp"
                android:bottomRightRadius="3.5dp"
                android:topLeftRadius="3.5dp"
                android:topRightRadius="3.5dp" />

            <stroke
                android:width="1dp"
                android:color="#7D2935" />

            <gradient
                android:angle="90"
                android:endColor="#DF6777"
                android:startColor="#9B2935" />
        </shape>
    </item>

</layer-list>