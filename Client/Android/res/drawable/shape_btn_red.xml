<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

            <stroke android:width="1dp" android:color="#B96363" />

            <gradient android:angle="270" android:centerColor="#AF5555" android:endColor="#eF6969" android:startColor="#eF6969" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

            <stroke android:width="1dp" android:color="#B96363" />

            <gradient android:angle="270" android:centerColor="#AF5555" android:endColor="#eF6969" android:startColor="#eF6969" />
        </shape></item>
    <item><shape>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

            <stroke android:width="1dp" android:color="#B96363" />

            <gradient android:angle="270" android:centerColor="#CD5555" android:endColor="#eF6969" android:startColor="#eF6969" />
        </shape></item>

