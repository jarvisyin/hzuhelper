<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:windowBackground">@color/colorF0F0F0</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_bg_green</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="btn_comment">
        <item name="android:layout_width">@dimen/len_70dp</item>
        <item name="android:layout_height">@dimen/len_30dp</item>
        <item name="android:background">@drawable/shape_btn_comment2</item>
        <item name="android:drawableLeft">@drawable/img_btn_comment3</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">#959493</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="takeout_restaurant_option_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/shape_takeout_footbar_btn_bg</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#777777</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="menu_frame_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dip</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:drawableRight">@drawable/img_menu_tv_bg</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">8dip</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>

    <style name="chat_tweet_footbar_radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shape_footbar_item_bg</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>

    <style name="list_item_score_tv">
        <item name="android:padding">5dip</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>